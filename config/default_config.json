{
  "version": "2.0.0",
  "description": "Default configuration for Quantum Random Walk Robot",
  "network": {
    "robot_ip": "192.168.4.1",
    "robot_port": 80,
    "auth_key": "pass123",
    "connection_timeout": 5,
    "max_retries": 3,
    "keepalive_interval": 10
  },
  "quantum": {
    "default_left_amplitude": 0.707,
    "default_right_amplitude": 0.707,
    "default_coherence_time": 1.0,
    "default_quantum_noise": 0.1,
    "entropy_update_rate": 0.1,
    "decoherence_model": "exponential"
  },
  "robot": {
    "default_speed": 5,
    "max_speed": 10,
    "min_speed": 1,
    "default_movement_interval": 1.0,
    "calibration_left": 0,
    "calibration_right": 0,
    "safety_distance": 10.0,
    "battery_low_threshold": 3.3,
    "current_high_threshold": 2.0
  },
  "gui": {
    "theme": "dark",
    "window_width": 1400,
    "window_height": 900,
    "auto_save_logs": true,
    "telemetry_update_rate": 100,
    "max_log_entries": 1000,
    "enable_animations": true,
    "language": "en"
  },
  "logging": {
    "log_level": "INFO",
    "log_to_file": true,
    "max_log_files": 10,
    "log_file_size": 10485760,
    "log_format": "[%(asctime)s] %(levelname)s: %(message)s",
    "enable_debug": false
  },
  "telemetry": {
    "update_interval": 1.0,
    "history_size": 500,
    "warning_thresholds": {
      "battery_low": 3.3,
      "rssi_weak": -80,
      "temp_high": 70,
      "current_high": 2.0
    }
  }
}
